    "version": "0.2.0",
    "configurations": [
        {
            "name": "LINUX - debug project",
            "type": "cppdbg",
            "program": "${workspaceFolder}/d2q9-bgk",
            "request": "attach",
            "processId": "${command:pickProcess}",
            // "request": "launch",
            // "args": ["input_128x128.params", "obstacles_128x128.dat"],
            // "stopAtEntry": false,
            // "cwd": "${workspaceFolder}",
            // "environment": [],
            // "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "LINUX - build project"
        }
    ]
}